<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.WeeklyCalFragment">

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/summary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar"
            app:layout_constraintBottom_toTopOf="@+id/barChart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/profile"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toTopOf="@+id/barChart"
            app:layout_constraintLeft_toRightOf="@+id/calendar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/barChart"
        app:layout_constraintTop_toBottomOf="@+id/topPanel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/weeklyCalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories per week: "/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/avgCal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily Average: "/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target: "/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/list"
        app:layout_constraintTop_toBottomOf="@+id/summary">
        <LinearLayout
            android:id="@+id/barGraph"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">
            <View
                android:layout_width="5dp"
                android:layout_height="200dp"
                android:background="#000000" />
            <RelativeLayout
                android:id="@+id/bar1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp">
                <View
                    android:id="@+id/breakfast1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ff00"/>
                <View
                    android:id="@+id/lunch1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/breakfast1"
                    android:background="#0543b6"/>
                <View
                    android:id="@+id/dinner1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/lunch1"
                    android:background="#0ca709"/>
                <View
                    android:id="@+id/other1"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/dinner1"
                    android:background="#FFEB3B"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bar2"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp">
                <View
                    android:id="@+id/breakfast2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ff00"/>
                <View
                    android:id="@+id/lunch2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/breakfast2"
                    android:background="#0543b6"/>
                <View
                    android:id="@+id/dinner2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/lunch2"
                    android:background="#0ca709"/>
                <View
                    android:id="@+id/other2"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/dinner2"
                    android:background="#FFEB3B"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bar3"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp">
                <View
                    android:id="@+id/breakfast3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ff00"/>
                <View
                    android:id="@+id/lunch3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/breakfast3"
                    android:background="#0543b6"/>
                <View
                    android:id="@+id/dinner3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/lunch3"
                    android:background="#0ca709"/>
                <View
                    android:id="@+id/other3"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/dinner3"
                    android:background="#FFEB3B"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bar4"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp">
                <View
                    android:id="@+id/breakfast4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ff00"/>
                <View
                    android:id="@+id/lunch4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/breakfast4"
                    android:background="#0543b6"/>
                <View
                    android:id="@+id/dinner4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/lunch4"
                    android:background="#0ca709"/>
                <View
                    android:id="@+id/other4"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/dinner4"
                    android:background="#FFEB3B"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bar5"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp">
                <View
                    android:id="@+id/breakfast5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ff00"/>
                <View
                    android:id="@+id/lunch5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/breakfast5"
                    android:background="#0543b6"/>
                <View
                    android:id="@+id/dinner5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/lunch5"
                    android:background="#0ca709"/>
                <View
                    android:id="@+id/other5"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/dinner5"
                    android:background="#FFEB3B"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bar6"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp">
                <View
                    android:id="@+id/breakfast6"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ff00"/>
                <View
                    android:id="@+id/lunch6"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/breakfast6"
                    android:background="#0543b6"/>
                <View
                    android:id="@+id/dinner6"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/lunch6"
                    android:background="#0ca709"/>
                <View
                    android:id="@+id/other6"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/dinner6"
                    android:background="#FFEB3B"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bar7"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp">
                <View
                    android:id="@+id/breakfast7"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ff00"/>
                <View
                    android:id="@+id/lunch7"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/breakfast7"
                    android:background="#0543b6"/>
                <View
                    android:id="@+id/dinner7"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/lunch7"
                    android:background="#0ca709"/>
                <View
                    android:id="@+id/other7"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/dinner7"
                    android:background="#FFEB3B"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:id="@+id/horizontalAxis"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#000000" />
        <LinearLayout
            android:id="@+id/daysOfTheWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:id="@+id/day1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Sun"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/day2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Mon"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/day3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Tue"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/day4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Wed"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/day5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Thu"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/day6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Fri"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/day7"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Sat"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barChart"
        app:layout_constraintBottom_toTopOf="@+id/add">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#ff00"
                android:layout_gravity="center"
                />
            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Breakfast"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/breakfastPercent"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="%"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/breakfastCal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Cal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#0543b6"
                android:layout_gravity="center"
                />
            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Lunch"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/lunchPercent"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="%"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/lunchCal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Cal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#0ca709"
                android:layout_gravity="center"
                />
            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Dinner"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/dinnerPercent"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="%"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/dinnerCal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Cal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="10dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#FFEB3B"
                android:layout_gravity="center"
                />
            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Other"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/otherPercent"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="%"/>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/otherCal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Cal"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/diary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/add"
        app:layout_constraintTop_toBottomOf="@id/list">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/diary" />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diary"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/add"
        app:layout_constraintTop_toBottomOf="@id/list">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trend" />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trend"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>